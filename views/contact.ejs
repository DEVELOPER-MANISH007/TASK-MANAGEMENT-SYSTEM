<!DOCTYPE html>
<html lang="en" data-theme="dark" class="scroll-smooth">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Contact Us | DreamProperties</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="/styles.css">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Inter', sans-serif;
    }
  </style>
</head>
<body class="theme-transition animate-fade-in" style="background: linear-gradient(135deg, var(--background-color) 0%, var(--surface-color) 100%); color: var(--text-color);">

  <!-- Navbar -->
  <nav class="glass-effect flex items-center justify-between p-5 fixed w-full z-50">
    <div class="text-2xl font-bold gradient-text">DreamProperties</div>
    <div class="flex items-center space-x-5">
      <a href="/" class="hover:text-blue-400 transition-colors">Home</a>
      <a href="/#properties" class="hover:text-blue-400 transition-colors">Properties</a>
      <a href="#contact" class="hover:text-blue-400 transition-colors">Contact</a>
      <button id="theme-toggle" class="btn-secondary px-3 py-2 flex items-center gap-2">
        <span id="themeIcon">🌙</span>
        <span id="themeText">Dark</span>
      </button>
    </div>
  </nav>

  <!-- Contact Section -->
  <section class="py-20 px-5 pt-24">
    <div class="container mx-auto">
      <h2 class="text-4xl font-bold text-center gradient-text mb-4">Get in Touch</h2>
      <p class="text-center text-lg mb-12" style="color: var(--text-secondary);">We'd love to hear from you. Send us a message!</p>
      
      <div class="card max-w-4xl mx-auto p-10 animate-slide-up">
        <h3 class="text-3xl font-semibold text-center mb-8">Contact Us</h3>
        
        <!-- Contact Form -->
        <form action="#" method="POST" class="space-y-6">
          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <input type="text" name="name" placeholder="Your Name" required class="input-field w-full p-4">
            </div>
            <div>
              <input type="email" name="email" placeholder="Your Email" required class="input-field w-full p-4">
            </div>
          </div>
          <div>
            <textarea name="message" placeholder="Your Message" required rows="6" class="input-field w-full p-4 resize-none"></textarea>
          </div>
          <div class="text-center">
            <button type="submit" class="btn-primary py-3 px-8 text-lg">Send Message</button>
          </div>
        </form>
      </div>
    </div>
  </section>

  <!-- Contact Info Section -->
  <section class="py-16">
    <div class="container mx-auto text-center">
      <h2 class="text-3xl font-bold gradient-text mb-6">Our Contact Information</h2>
      <p class="mb-8" style="color: var(--text-secondary);">Feel free to reach out to us via the details below:</p>
      <div class="grid md:grid-cols-2 gap-8 max-w-2xl mx-auto">
        <div class="card p-6">
          <div class="text-2xl mb-2">📧</div>
          <h3 class="font-semibold mb-2">Email</h3>
          <p style="color: var(--text-secondary);">info@dreamproperties.com</p>
        </div>
        <div class="card p-6">
          <div class="text-2xl mb-2">📞</div>
          <h3 class="font-semibold mb-2">Phone</h3>
          <p style="color: var(--text-secondary);">+123 456 7890</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Google Map Section -->
  <section class="py-16 px-5">
    <div class="container mx-auto">
      <h2 class="text-3xl font-bold text-center gradient-text mb-10">Find Us Here</h2>
      <div class="card overflow-hidden">
        <iframe class="w-full h-80" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3679.7300784547017!2d78.09301928532332!3d27.176721697278055!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3974770f1296b71b%3A0xf918476fe35de38!2sTaj%20Mahal!5e0!3m2!1sen!2sin!4v1620711418039!5m2!1sen!2sin" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="p-8 text-center" style="background-color: var(--surface-color);">
    <p style="color: var(--text-secondary);">© 2025 DreamProperties. All rights reserved.</p>
  </footer>

<script>
  // Theme Management
  const toggleButton = document.getElementById('theme-toggle');
  const themeIcon = document.getElementById('themeIcon');
  const themeText = document.getElementById('themeText');
  const htmlTag = document.querySelector('html');

  function updateThemeUI(theme) {
    if (theme === 'dark') {
      themeIcon.textContent = '🌙';
      themeText.textContent = 'Dark';
    } else {
      themeIcon.textContent = '☀️';
      themeText.textContent = 'Light';
    }
  }

  toggleButton.addEventListener('click', () => {
    const currentTheme = htmlTag.getAttribute('data-theme');
    const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
    htmlTag.setAttribute('data-theme', newTheme);
    updateThemeUI(newTheme);
    
    // Save theme preference
    localStorage.setItem('theme', newTheme);
  });

  // Load saved theme preference
  const savedTheme = localStorage.getItem('theme') || 'dark';
  htmlTag.setAttribute('data-theme', savedTheme);
  updateThemeUI(savedTheme);

  // Form validation
  const form = document.querySelector('form');
  const inputs = form.querySelectorAll('input, textarea');
  
  inputs.forEach(input => {
    input.addEventListener('blur', () => {
      if (input.checkValidity()) {
        input.style.borderColor = 'var(--success-color)';
      } else {
        input.style.borderColor = 'var(--error-color)';
      }
    });
    
    input.addEventListener('input', () => {
      input.style.borderColor = 'var(--input-border)';
    });
  });

  // Smooth scrolling for anchor links
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
      e.preventDefault();
      const target = document.querySelector(this.getAttribute('href'));
      if (target) {
        target.scrollIntoView({
          behavior: 'smooth',
          block: 'start'
        });
      }
    });
  });
</script>
</body>
</html>
